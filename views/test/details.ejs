<%- layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-6 mb-5">
        <div class="card mb-3">
            <% if (!test.picture) {%>
                <div class= "col-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/3586/3586930.png" class="card-img-top" alt="No picture">   
                </div>
            <% } else {%>
                <img src="<%=test.picture%>" class="card-img-top" alt="picture:<%=test.name%>">
            <% } %>  
            <div class="card-body">
                <h6>By: <a href="/user/<%= test.trainer._id %>"><%= test.trainer.firstName %> <%= test.trainer.lastName %> </a></h6>
                <h5 class="card-title text-center"><%=test.name%></h5>
                <p class="card-text"><%= test.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Categoria: <%=test.categories%> </li>
                <li class="list-group-item">Resultado: <%= test.result %></li>
                <div class="list-group-item">    
                    <a href="/user/<%= test.trainer._id %>" class="card-link">Regresar al perfil </a>
                </div>
                <div class="list-group-item">
                    <form action="/test/<%= test._id %>/edit">
                        <div class="d-grid gap-2 mb-2">
                            <button class="btn btn-dark">Editar a <%=test.name%> </button>
                        </div>
                    </form>
                </div>  
                <div class="list-group-item text-end">
                    <form action="/user/<%=test.trainer._id%>/test/<%=test._id%>?_method=DELETE" method="POST">
                        <div class="d-grid gap-2 mb-2">
                            <button class="btn btn-danger">Eliminar a <%=test.name%> </button>
                        </div>
                    </form>
                </div>
            </ul>
        </div>
    </div>
    <div class="col-6">
        <h2>Deja Una Rese침a</h2>
        <form action="/test/<%= test._id %>/reviews" method="POST" class="mb-3 validate-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Calificacion</label><br>
                <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Rese침a</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4" required></textarea>
            </div>
           <button class="btn btn-dark">Enviar</button>
        </form>
        <% for(let review of test.reviews){ %> 
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Calificaci칩n: <%= review.rating %> </h5>
                <p class="card-text">Rese침a: <%= review.body %></p> 
                <form action="/test/<%= test.id %>/reviews/<%= review.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
        <% } %> 
    </div>
</div>
